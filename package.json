{
  "name": "eye-warning",
  "displayName": "eye-warning",
  "publisher": "ton-pseudo",
  "description": "Extension to prevent you from staying too long in front of your screen",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./dist/extension.js",
  "files": ["dist/**", "images/**"],
  "contributes": {
    "commands": [
      {
        "command": "eye-warning.setInterval",
        "title": "Eye Warning: Set Interval"
      },
      {
        "command": "eye-warning.setImageFolder",   
        "title": "Eye Warning: Set Image Folder"
      },
      {
        "command": "eye-warning.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Eye Warning",
      "properties": {
        "eye-warning.interval": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Interval in minutes between warnings"
        },
        "eye-warning.imageFolder": {
          "type": "string",
          "default": "images",
          "description": "Relative path (from extension root) to your PNG folder"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
